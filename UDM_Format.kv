<LockScreen>:
    MDFloatLayout:
        MDGridLayout:
            id: LockScreenGrid
            cols: 10
            spacing: dp(10)
            padding: dp(10)
            size_hint: None, None
            pos_hint: {"center_x":.5,"center_y":.5}
            width: self.minimum_width
            height: self.minimum_height
            adaptive_size: True


<TimeOut>:
    MDFloatLayout:
        MDLabel:
            id: CountDown
            text: "00:00"
            font_style: "H4"
            size_hint: None, None
            size: dp(100), dp(40)
            pos_hint: {"center_x":.5,"center_y":.5}


<StartScreen>:
    name: "startScreen"
    MDFloatLayout:
        MDTopAppBar:
            title: "User Database Manager"
            left_action_items: [["lock-outline", lambda y: app.root.lockOut()]]
            pos_hint: {"top": 1}
            elevation: 10

        MDIconButton:
            id: addUserBtn
            icon: "one-up" # account-multiple-outline
            icon_size: "48dp"
            pos_hint: {"center_x":.25,"center_y":.5}
            on_release: root.openMenuAdd(self)

        MDIconButton:
            id: showDataBtn
            icon: "message-bulleted"
            icon_size: "48dp"
            pos_hint: {"center_x":.5,"center_y":.5}
            on_release: root.openMenuShow(self)

        MDIconButton:
            id: removeUserBtn
            icon: "death-star-variant"
            icon_size: "48dp"
            pos_hint: {"center_x":.75,"center_y":.5}
            on_release: root.openMenuRemove(self)


<AddUserScreen>:
    MDFloatLayout:
        MDTopAppBar:
            id: addUserTopBar
            title: ""
            left_action_items: [["arrow-left", lambda y: app.root.backButton()]]
            pos_hint: {"top": 1}
            elevation: 10

        MDTextField:
            id: newUser
            mode: "rectangle"
            hint_text: "New User Name"
            size_hint: .7,None
            pos_hint: {"center_x":.4,"center_y":.8}

        MDTextField:
            id: newUNum
            mode: "rectangle"
            hint_text: "New U-Num"
            size_hint: .3,None
            pos_hint: {"center_x":.2,"center_y":.65}

        MDTextField:
            id: newPin
            mode: "rectangle"
            hint_text: "User Pin"
            size_hint: .3,None
            pos_hint: {"center_x":.6,"center_y":.65}

############## Basic User ##############
        MDRaisedButton:
            id: basicUserBtn
            text: "Basic User"
            size_hint: None,None
            pos_hint: {"center_x":.2,"center_y":.5}
            on_release: root.toggleBasicUserIcon()
        MDIconButton:
            id: basicUserIcon
            icon: "check-bold"
            opacity: 0
            size_hint: None,None
            pos_hint: {"center_x":.3,"center_y":.5}

############## Rework User ##############
        MDRaisedButton:
            id: basicUserBtn
            text: "Rework User"
            size_hint: None,None
            pos_hint: {"center_x":.2,"center_y":.4}
            on_release: root.toggleReworkUserIcon()
        MDIconButton:
            id: ReworkUserIcon
            icon: "check-bold"
            opacity: 0
            size_hint: None,None
            pos_hint: {"center_x":.3,"center_y":.4}

############## BGA User ##############
        MDRaisedButton:
            id: BGAUserBtn
            text: "BGA User"
            size_hint: None,None
            pos_hint: {"center_x":.2,"center_y":.3}
            on_release: root.toggleBGAUserIcon()
        MDIconButton:
            id: BGAUserIcon
            icon: "check-bold"
            opacity: 0
            size_hint: None,None
            pos_hint: {"center_x":.3,"center_y":.3}

############## Admin User ##############
        MDRaisedButton:
            id: AdminUserBtn
            text: "Admin User"
            size_hint: None,None
            pos_hint: {"center_x":.2,"center_y":.2}
            on_release: root.toggleAdminUserIcon()
        MDIconButton:
            id: AdminUserIcon
            icon: "check-bold"
            opacity: 0
            size_hint: None,None
            pos_hint: {"center_x":.3,"center_y":.2}

############## QA User ##############
        MDRaisedButton:
            id: QAUserBtn
            text: "QA User"
            size_hint: None,None
            pos_hint: {"center_x":.2,"center_y":.1}
            on_release: root.toggleQAUserIcon()
        MDIconButton:
            id: QAUserIcon
            icon: "check-bold"
            opacity: 0
            size_hint: None,None
            pos_hint: {"center_x":.3,"center_y":.1}

        MDRaisedButton:
            id: submitBtn
            text: "Submit"
            pos_hint: {"center_x":.9,"center_y":.1}
            on_release: root.submitSelections()


<RemoveUserScreen>:
    MDFloatLayout:
        MDTopAppBar:
            id: removeUserTopBar
            title: ""
            left_action_items: [["arrow-left", lambda y: app.root.backButton()]]
            pos_hint: {"top": 1}
            elevation: 10

        MDTextField:
            id: targetUser
            mode: "rectangle"
            hint_text: "U-Num"
            size_hint: .7,None
            pos_hint: {"center_x":.5,"center_y":.65}

        MDRaisedButton:
            id: removeBtn
            text: "Remove"
            pos_hint: {"center_x":.5,"center_y":.2}
            on_release: root.removeSelections()
